%p#notice= notice
%h1= t("game.views.index.header")
%table#games
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @games.each do |game|
      %tr{:id => "game_game.id"}
        %td= game.name
        %td= link_to 'Show', game
        %td= link_to 'Edit', edit_game_path(game)
        %td= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to t("game.views.index.button_new"), new_game_path
